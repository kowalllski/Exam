<Page x:Class="Exam.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Button x:Name="AddTaskListButton" Content="+" HorizontalAlignment="Left" Margin="25,115,0,0" VerticalAlignment="Top" Width="20" RenderTransformOrigin="0.25,0.75" Click="AddTaskListButton_Click"/>
        <Label x:Name="Text" Content="Добавить список" HorizontalAlignment="Left" Margin="50,115,0,0" VerticalAlignment="Top" Width="140"/>
        <TextBox x:Name="NewTaskListName" HorizontalAlignment="Left" Height="20" Margin="25,115,0,0" TextWrapping="Wrap" Text="Название списка" VerticalAlignment="Top" Width="175" PreviewMouseDown="NewTaskListName_PreviewMouseDown" Visibility="Hidden" LostFocus="NewTaskListName_LostFocus"/>
    </Grid>
</Page>
